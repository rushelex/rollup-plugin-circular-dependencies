{
  "name": "rollup-plugin-circular-dependencies",
  "type": "module",
  "version": "1.2.0-rc.3",
  "description": "Detect circular dependencies in Rollup projects",
  "author": "Aleksey Shelementev <rushelex@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/rushelex/rollup-plugin-circular-dependencies#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rushelex/rollup-plugin-circular-dependencies.git"
  },
  "bugs": {
    "url": "https://github.com/rushelex/rollup-plugin-circular-dependencies/issues"
  },
  "keywords": [
    "circular-dependencies",
    "circular dependencies",
    "cyclic dependencies",
    "dependencies",
    "rollup-plugin",
    "rollup plugin",
    "rollup",
    "vite-plugin",
    "vite plugin",
    "vite"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist",
    "package.json"
  ],
  "engines": {
    "node": ">=18.19"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "pkgroll --clean-dist --env.NODE_ENV=production --minify",
    "build:watch": "pkgroll --clean-dist --watch",
    "lint": "NODE_ENV=production eslint . --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit --pretty",
    "format": "prettier . --write",
    "test": "cd test && npm run test",
    "check-exports": "attw --pack .",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0||^3.0.0||^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "picocolors": "1.1.1",
    "picomatch": "4.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "3.8.0",
    "@arethetypeswrong/cli": "0.16.4",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.14.8",
    "@types/picomatch": "3.0.1",
    "cross-env": "7.0.3",
    "eslint": "9.12.0",
    "eslint-plugin-format": "0.1.2",
    "lefthook": "1.7.22",
    "lodash-es": "4.17.21",
    "pkgroll": "2.5.0",
    "prettier": "3.3.3",
    "rollup": "4.24.0",
    "semantic-release": "24.1.2",
    "typescript": "5.6.3"
  }
}
